{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Barre Code REST API",
    "description": "API for managing product add in inventory, user authentication, ...",
    "contact": {
      "name": "API Support",
      "email": "rajputankit22@gmail.com"
    }
  },
  "host": "localhost:3300",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {},
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/product/{barCode}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "barCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Log the user.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/components/schemas/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user successfully logged in"
          },
          "400": {
            "description": "Data incorrectly formatted"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Server Issue"
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Register the user.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user successfully registered"
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Data incorrectly formatted"
          },
          "409": {
            "description": "User already exists"
          },
          "500": {
            "description": "Server Issue"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "firstname": {
            "type": "string",
            "example": "John"
          },
          "name": {
            "type": "string",
            "example": "Doe"
          },
          "username": {
            "type": "string",
            "example": "johndoe077"
          },
          "email": {
            "type": "string",
            "example": "johndoe077@api.com"
          },
          "password": {
            "type": "string",
            "example": "Password123@"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "login": {
            "type": "string",
            "example": "johndoe077"
          },
          "password": {
            "type": "string",
            "example": "Password123@"
          }
        }
      }
    }
  }
}